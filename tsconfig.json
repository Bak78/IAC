{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "types": ["node", "jest"],
        "baseUrl": "./src",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ESNext",
        "resolveJsonModule": true,
        "module": "CommonJS",
        "paths": {
          "firebase-admin/*": ["node_modules/firebase-admin/*"]
        }
    },
    "exclude": ["node_modules", "src/**/*.test.ts", "jest.config.ts"]
  }